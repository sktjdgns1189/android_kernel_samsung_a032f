config SPRD_BUSMONITOR
	bool "Spreadtrum BUS Monitor Support"
	depends on SPRD_DEBUG
	help
	  Say Y here to support BUS monitor.

config SPRD_APB_BUSMONITOR
	bool "Spreadtrum APB BUS Monitor Support"
	depends on SPRD_DEBUG
	help
	  Say Y here to support APB BUS monitor.

config SPRD_BUSMONITOR_GCOV
	bool "open gcov for BUS monitor"
	depends on GCOV_PROFILE_MODULES
	help
	  Say Y here to enable gcov in busmonitor.
